{
  "name": "educode",
  "displayName": "EduCode",
  "description": "EduCode is a VSCode-Extension to display tutorial content in a webview inside theia or VSCode",
  "publisher": "EclipseSource",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "theiatutorialextension.displayTutorial",
        "title": "Educode: Show Tutorial"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "theiaTutorial",
          "title": "theiaTutorial",
          "icon": "src/media/theiaLogo.svg"
        }
      ]
    },
    "views": {
      "theiaTutorial": [
        {
          "id": "theiaTutorial",
          "name": "theiaTutorial",
          "icon": "src/media/theiaLogo.svg",
          "contextualTitle": "theiaTutorial"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "theiaTutorial",
        "contents": "[Theia: Display Tutorial](command:theiatutorialextension.displayTutorial)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "cd ./react-app && yarn build && cd .. && tsc -p ./ && recursive-copy --overwrite react-app/build out",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "del-cli test/runTests -f && recursive-copy --overwrite test/tutorial test/runTests && node ./out/test/runTest.js && cd react-app && yarn test -- --watchAll=false"
  },
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "chai": "^4.3.4",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "ts-mockito": "^2.6.1",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "ajv": "^7.0.3",
    "babel-plugin-rewire": "^1.2.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^3.0.1",
    "fs-extra": "^10.0.0",
    "json-schema-to-typescript": "^10.1.1",
    "material-ui-icons": "^1.0.0-beta.36",
    "node-cmd": "^4.0.0",
    "recursive-copy-cli": "^1.0.16",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "vsce": "^1.83.0"
  }
}
